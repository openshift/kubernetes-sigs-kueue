{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
  ],
  "assigneesFromCodeOwners": true,
  "automergeStrategy": "auto",
  "automergeType": "pr",
  "prConcurrentLimit": 5,
  "ignoreTests": false,
  "rebaseLabel": "needs-rebase",
  "rebaseWhen": "behind-base-branch",
  "recreateWhen": "always",
  "commitMessageSuffix": "{{baseBranch}}",
  "ignorePaths": ["**/dep-crds/**", "**/cmd/**", "**/hack/internal/**", "**/vendor/**", "hack/cypress/Dockerfile", "hack/debugpod/Dockerfile", "hack/shellcheck/Dockerfile", "Dockerfile"],
  "tekton": {
    "enabled": true,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true,
        "addLabels": ["lgtm", "approved"]
      }
    ]
  },
  "dockerfile": {
    "enabled": true,
    "packageRules": [
      {
        "matchFileNames": [
          "Dockerfile.ci",
          "Dockerfile.rhel"
        ],
        "automerge": true,
        "addLabels": ["lgtm", "approved"]
      }
    ]
  },
  "gomod": {
    "enabled": false
  },
  "npm": {
    "enabled": false
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
